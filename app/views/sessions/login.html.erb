<div class= "Sign_Form">
  <h1>Please log in</h1>
<small><i>(hint: use your divipedia credentials)</i></small>
  <%= form_tag(:action => 'login_attempt') do %>
      <p>Username:</br> <%= text_field_tag(:username) %></p>
      <p>Password:</br> <%= password_field_tag(:password) %></p>
      <%= submit_tag("Log In") %>
  <% end %>
</div>